<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen50"
        android:src="@mipmap/succicon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen30"
        android:includeFontPadding="false"
        android:text="支付成功，正在打印小票"
        android:textColor="@color/color_323232"
        android:textSize="@dimen/dimen23sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen40"
        android:layout_marginRight="@dimen/dimen40"
        android:layout_marginTop="@dimen/dimen44"
        android:background="@mipmap/payorder_icon"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen170"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号："
                    android:textColor="@color/color_1e1e1e"
                    android:textSize="@dimen/dimen12sp" />

                <TextView
                    android:id="@+id/order_no_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M1007180623121122222"
                    android:textColor="@color/color_646464"
                    android:textSize="@dimen/dimen12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="买家账号："
                    android:textColor="@color/color_1e1e1e"
                    android:textSize="@dimen/dimen12sp" />

                <TextView
                    android:id="@+id/mobile_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13402340789"
                    android:textColor="@color/color_646464"
                    android:textSize="@dimen/dimen12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易金额："
                    android:textColor="@color/color_1e1e1e"
                    android:textSize="@dimen/dimen12sp" />

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00元"
                    android:textColor="@color/color_646464"
                    android:textSize="@dimen/dimen12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易日期："
                    android:textColor="@color/color_1e1e1e"
                    android:textSize="@dimen/dimen12sp" />

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018年3月28日"
                    android:textColor="@color/color_646464"
                    android:textSize="@dimen/dimen12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen44"
        android:layout_marginTop="@dimen/dimen16"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/code_img"
            android:layout_width="@dimen/dimen100"
            android:layout_height="@dimen/dimen100"
            android:layout_marginRight="@dimen/dimen12"
            android:scaleType="fitXY"
            android:src="@mipmap/default_image" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/code_img"
            android:layout_toRightOf="@+id/code_img"
            android:text="@string/query_order_info_str"
            android:textColor="@color/color_1e1e1e"
            android:textSize="@dimen/dimen21sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginTop="@dimen/dimen7"
            android:layout_toRightOf="@+id/code_img"
            android:text="@string/succ_code_hint_str"
            android:textColor="@color/color_646464"
            android:textSize="@dimen/dimen9sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_marginLeft="@dimen/dimen12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen2"
            android:layout_below="@+id/code_img"
            android:text="茂乐惠, 随时随地买正品"
            android:textColor="@color/color_323232"
            android:textSize="@dimen/dimen9sp" />

        <LinearLayout
            android:id="@+id/back_ll"
            android:clickable="true"
            android:layout_width="@dimen/dimen136"
            android:layout_height="@dimen/dimen40"
            android:layout_alignBottom="@+id/text2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen40"
            android:background="@color/black"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="返回首页"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen16sp" />

            <TextView
                android:id="@+id/count_down_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen2"
                android:text="10s"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen13sp" />
        </LinearLayout>
    </RelativeLayout>

    <com.maoye.mlh_slotmachine.widget.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen220"
        app:banner_default_image="@mipmap/default_banner"
        app:delay_time="1500"
        app:image_scale_type="fit_xy"
        app:indicator_drawable_selected="@drawable/shape_selected"
        app:indicator_drawable_unselected="@drawable/shape_noraml"
        app:is_auto_play="true" />
</LinearLayout>